<div class="row-fluid">
  <div class="col-md-4 col-md-offset-4">
    <div class="row">

      <h1>Edit your goods</h1>

      <%= form_for(@good) do |f| %>
        <% if @good.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@good.errors.count, "error") %> prohibited this good from being saved:</h2>

            <ul>
            <% @good.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "peferred addresses" %>
          <%= f.text_field :address, class: "form-control" %><br>
          <%= f.text_field :address1, class: "form-control" %><br>
          <%= f.text_field :address2, class: "form-control" %><br>
        </div>

        <div class="form-group">
          <%= f.submit "GO", class: "btn btn-primary" %>
        </div>
      <% end %>


    </div>
  </div>

</div>
