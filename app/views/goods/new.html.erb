<div class="row-fluid">
  <div class="col-md-4 col-md-offset-4">
    <div class="row">

      <h1>Create your goods</h1>

      <%= form_for @good, :url => { :action => :create } do |f| %>
        <% if @good.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@good.errors.count, "error") %> prohibited this good from being saved:</h2>

            <ul>
            <% @good.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <label for="good_address">Address 1</label>
          <input id='gmaps_input_address' placeholder='Start typing a place name...' type='text' class="form-control" name="goods[address]"/>
        </div>
        <div class="form-group">
          <label for="good_address_1">Address 2 [Optional]</label>
          <input id='gmaps_input_address1' placeholder='Start typing a place name...' type='text' class="form-control" name="goods[address1]"/>
        </div>
        <div class="form-group">
          <label for="good_address_2">Address 3 [Optional]</label>
          <input id='gmaps_input_address2' placeholder='Start typing a place name...' type='text' class="form-control" name="goods[address2]"/>
        </div>
        <div class="form-group">
          <%= f.submit "GO", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to "get batck to list", goods_path %>


    </div>
  </div>

</div>