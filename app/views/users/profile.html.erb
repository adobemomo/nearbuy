
<div class="card text-center" style="border-style: dotted; border-width: thick">
  <div class="card-header">
    <h1><%= @user.username %></h1>
  </div>
  <div class="card-body">
    <h2 class="card-title"><%= @user.email %></h2>
    <p class="card-text"><%= @user.last_name.nil? ? "" : @user.last_name + "  " + @user.first_name.nil? ? "" : @user.first_name %></p>
    <%= link_to "Goods List", user_goods_list_path(), class:"nav-link btn btn-primary navbar-btn" %>
  </div>
  <br/>
  <div class="card-footer text-muted">
    <%= link_to 'Back to', goods_path %> @NearBuy 
  </div>
  
</div>

